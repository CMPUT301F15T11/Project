<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/bkg_white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:background="@drawable/dvd"
            android:id="@+id/imgv_add_dvd" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload new Photo"
                android:id="@+id/btn_add_dvd_upload"
                android:layout_gravity="left"
                android:textColor="#fafafa"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_shape_nograd"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category: "
                    android:textSize="20dp"
                    android:textColor="#0a0a0a"
                    android:id="@+id/tv_add_category"
                    android:layout_gravity="center_vertical" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner"
                    android:layout_weight="1" />

            </LinearLayout>>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/button_shape_indigo">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_gravity="bottom">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#fafafa"
                    android:layout_height="wrap_content"
                    android:text="Name "
                    android:textSize="20dp"
                    android:id="@+id/tv_add_name"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/ed_add_name"
                    android:textColor="#fafafa"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fafafa"
                    android:textSize="20dp"
                    android:text="Quantity "
                    android:id="@+id/tv_add_quantity"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_add_quantity"
                    android:textColor="#fafafa"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fafafa"
                    android:textSize="20dp"
                    android:text="Quality "
                    android:id="@+id/tv_add_quality"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_add_quality"
                    android:textColor="#fafafa"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#fafafa"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:text="Sharable "
                    android:id="@+id/tv_add_sharable"
                    android:layout_gravity="center_vertical" />


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_add_share"
                    android:textColor="#fafafa"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comments "
                    android:textSize="20dp"
                    android:textColor="#fafafa"
                    android:id="@+id/tv_add_comment"
                    android:layout_gravity="center_vertical" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ems="10"
                    android:textColor="#fafafa"
                    android:id="@+id/ed_add_comment"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="#3b8887"
                android:text="Save"
                android:id="@+id/btn_add_dvd_save"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_shape_white"
                android:onClick="onAddSave"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textColor="#3b8887"
                android:id="@+id/btn_add_dvd_cancel"
                android:layout_gravity="bottom"
                android:background="@drawable/button_shape_white"
                android:onClick="onAddCancel"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>